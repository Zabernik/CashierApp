<Page x:Class="CashierApp.Pages.Extras"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CashierApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Extras">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140*"/>
            <ColumnDefinition Width="140*"/>
            <ColumnDefinition Width="260*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="140*"/>
        </Grid.RowDefinitions>
        <Button x:Name="ButtonExtraChesse" Content="Ser" Click="ButtonExtraChesse_Click" Grid.Column="1" Grid.Row="0"/>
        <Button x:Name="ButtonExtraBacon" Content="Bekon" Click="ButtonExtraBacon_Click" Grid.Column="0" Grid.Row="0"/>

    </Grid>
</Page>
