        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CashierApp"
        mc:Ignorable="d"
        Title="LogIn" WindowState="Maximized" WindowStyle="None" ResizeMode="NoResize">
