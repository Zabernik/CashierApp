<Window x:Class="CashierApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CashierApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900">
    <Grid>
        <Button x:Name="ButtonCheesburger" Content="Cheesburger" HorizontalAlignment="Left" Height="52" Margin="295,65,0,0" VerticalAlignment="Top" Width="130" Click="ButtonCheesburger_Click"/>
        <Button x:Name="ButtonExtraChesse" Content="Ser" HorizontalAlignment="Left" Height="33" Margin="295,117,0,0" VerticalAlignment="Top" Width="65" Click="ButtonExtraChesse_Click"/>
        <Button x:Name="ButtonExtraBacon" Content="Bekon" HorizontalAlignment="Left" Height="33" Margin="360,117,0,0" VerticalAlignment="Top" Width="65" Click="ButtonExtraBacon_Click"/>
        <Button x:Name="ButtonCheesburgerSet" Content="Cheesburger &#xD;&#xA;Zestaw" HorizontalAlignment="Left" Height="85" Margin="425,65,0,0" VerticalAlignment="Top" Width="130" Click="ButtonCheesburgerSet_Click" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button x:Name="VoidButton" Content="Void" HorizontalAlignment="Left" Height="53" Margin="295,316,0,0" VerticalAlignment="Top" Width="130" Click="VoidButton_Click"/>
        <ListBox x:Name="ListBoxOrder" HorizontalAlignment="Left" Height="394" VerticalAlignment="Top" Width="138" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Label x:Name="LabelValue" Content="" HorizontalAlignment="Left" Height="30" Margin="0,394,0,0" VerticalAlignment="Top" Width="168"/>

    </Grid>
</Window>
