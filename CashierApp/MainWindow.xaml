<Window x:Class="CashierApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CashierApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900">
    <Grid>
        <Button x:Name="VoidButton" Content="Void" HorizontalAlignment="Left" Height="65" Margin="376,519,0,0" VerticalAlignment="Top" Width="130" Click="VoidButton_Click"/>
        <ListBox x:Name="ListBoxOrder" HorizontalAlignment="Left" Height="519" VerticalAlignment="Top" Width="138" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Label x:Name="LabelValue" Content="" HorizontalAlignment="Left" Height="30" Margin="0,524,0,0" VerticalAlignment="Top" Width="138"/>
        <Frame x:Name="Main" NavigationUIVisibility="Hidden" HorizontalAlignment="Left" Height="440" Margin="138,79,0,0" VerticalAlignment="Top" Width="752"/>
        <Button x:Name="ButtonSandwich" Content="Kanapki" HorizontalAlignment="Left" Height="74" Margin="206,0,0,0" VerticalAlignment="Top" Width="150" Click="ButtonSandwich_Click"/>
        <Button x:Name="ButtonWraps" Content="Wrapy" HorizontalAlignment="Left" Height="74" Margin="356,0,0,0" VerticalAlignment="Top" Width="150" Click="ButtonWraps_Click"/>
        <Button x:Name="ButtonSalads" Content="Sałatki" HorizontalAlignment="Left" Height="74" Margin="506,0,0,0" VerticalAlignment="Top" Width="150" Click="ButtonSalads_Click"/>
        <Button x:Name="ButtonExtras" Content="Dodatki" HorizontalAlignment="Left" Height="74" Margin="656,0,0,0" VerticalAlignment="Top" Width="150" Click="ButtonExtras_Click"/>

    </Grid>
</Window>
